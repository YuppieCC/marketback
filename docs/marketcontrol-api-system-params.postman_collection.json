							"raw": "{\n  \"is_active\": false,\n  \"preset_name\": \"Updated Strategy\",\n  \"params_config\": {\n    \"sort_type\": \"asc\",\n    \"max_buy_sol\": 0.5,\n    \"min_buy_sol\": 0.2,\n    \"new_param\": \"value\"\n  }\n}",
